{
  "name": "@indeimap/indiemap",
  "scripts": {
    "typecheck": "pnpm --filter !tsconfig --filter !web recursive exec tsc --noEmit && pnpm -F web check",
    "test": "pnpm --filter !tsconfig recursive run test",
    "test:db": "pnpm --filter !tsconfig recursive run test:db",
    "validate": "pnpm run lint:fix && pnpm run typecheck && pnpm run test && pnpm run test:db",
    "validate!": "pnpm run lint:fix && pnpm run typecheck && pnpm run test",
    "lint": "oxlint && dprint check",
    "lint:fix": "oxlint --fix && dprint fmt",
    "docker:build": "docker build -t ghcr.io/indiemap-uk/indiemap:latest --file workloads/web/Dockerfile .",
    "docker:run": "docker-compose up"
  },
  "devDependencies": {
    "@types/node": "^24.1.0",
    "dprint": "^0.50.0",
    "globals": "^15.15.0",
    "oxlint": "^1.3.0",
    "typescript": "^5.8.3",
    "vitest": "^2.1.9"
  },
  "version": "1.0.0",
  "private": true,
  "license": "UNLICENSED",
  "type": "module",
  "packageManager": "pnpm@10.7.1"
}
